#!/bin/bash

if [ ! -d "/usr/local/Cellar/espeak/1.48.04/share/espeak-data" ]; then
	sudo mkdir -p /usr/local/Cellar/espeak/1.48.04/share/
	sudo ln -fs /usr/local/share/espeak-data /usr/local/Cellar/espeak/1.48.04/share/
fi

if [ ! -n "$(grep 'export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH' ~/.bash_profile)" ]; then
	touch $HOME/.bash_profile
	echo 'export PATH=/usr/local/bin:/usr/local/sbin:~/bin:$PATH' >> $HOME/.bash_profile
	chown $USER $HOME/.bash_profile
fi
